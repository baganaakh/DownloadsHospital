<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="patient_name"/>
            </field>
        </field>
    </record>
<!--tree view of the patient model-->
    <record id="patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="patient_name"/>
                <field name="name_seq"/>
                <field name="age_group"/>
                <field name="patient_age"/>
                <field name="gender"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>
<!--form view of the patient model-->
    <record id="patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <header>
                    <button name="%(om_hospital.create_appointment_wizard)d" string="Create Appointment"
                            type="action" class="oe_highlight" context="{'default_patient_id': active_id"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name_seq"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_age"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="patient_name"/>
                            <field name="name_seq" readonly="1"/>
                            <field name="age_group" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patients">
                <field name="name" filter_domain=
                        "['|',('patient_name','ilike',self),('name_seq','ilike',self)]"/>
                <field name="name_seq"/>
                <field name="patient_name"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender','=','male')]"/>
                <filter string="Female" name="male" domain="[('gender','=','female')]"/>
<!--                <filter string="Leads" name="leads" domain="[('type', '=', 'opportunity')]">-->
                <group expand="0" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                </group>
            </search>
        </field>
    </record>

<!--    action of the patients menu-->
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_female":1}</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_smiling_face">
            <!-- Add Text Here -->
          Create First Patient
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>
    <menuitem id="hospital_root" name="Hospital" sequence="0" web_icon="om_hospital,static/description/icon.png"/>
    <menuitem id="hospital_patient" name="Patients" parent="hospital_root" action="action_patient"/>
    <menuitem id="create_appointment" name="Create Appointment" parent="hospital_root"
              action="create_appointment_wizard" sequence="40"/>

</odoo>