<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="dev_relation.list">
      <field name="name">dev_relation list</field>
      <field name="model">dev_relation.dev_relation</field>
      <field name="arch" type="xml">
        <tree>
          <field name="lot"/>
          <field name="act"/>
<!--          <field name="tag_line"/>-->
          <field name="tag_id1"/>
          <field name="tag_id2"/>
          <field name="tag_id3"/>
          <field name="tag_id4"/>
          <field name="tag_id5"/>
          <field name="tag_id6"/>
        </tree>
      </field>
    </record>
<!--form-->
    <record id="rel_form" model="ir.ui.view">
      <field name="name">dev_relation.dev_relation.form</field>
      <field name="model">dev_relation.dev_relation</field>
      <field name="arch" type="xml">
        <form string="tag">
          <sheet>
            <group>
              <group>
                <field name="lot"/>
                <field name="act"/>
              </group>
<!--                <field name="tag_line"/>-->
              <group>
                <field name="tag_id1"/>
                <field name="tag_id2"/>
                <field name="tag_id3"/>
              </group>
              <group>
                <field name="tag_id4"/>
                <field name="tag_id5"/>
                <field name="tag_id6"/>
              </group>
            </group>

          </sheet>
        </form>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="dev_relation.action_window">
      <field name="name">dev_relation window</field>
      <field name="res_model">dev_relation.dev_relation</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="dev_relation.action_server">
      <field name="name">dev_relation server</field>
      <field name="model_id" ref="model_dev_relation_dev_relation"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="dev_relation" id="dev_relation.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Menu 1" id="dev_relation.menu_1" parent="dev_relation.menu_root"/>
<!--    <menuitem name="Menu 2" id="dev_relation.menu_2" parent="dev_relation.menu_root"/>-->

    <!-- actions -->
    <menuitem name="List" id="dev_relation.menu_1_list" parent="dev_relation.menu_1"
              action="dev_relation.action_window"/>
<!--    <menuitem name="Server to list" id="dev_relation" parent="dev_relation.menu_2"-->
<!--              action="dev_relation.action_server"/>-->
  </data>
</odoo>