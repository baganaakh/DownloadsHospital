<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<!--tree view of the tag model-->
    <record id="tag_tree" model="ir.ui.view">
        <field name="name">rfid.tag.tree</field>
        <field name="model">rfid.tag</field>
        <field name="arch" type="xml">
            <tree string="tags">
                <field name="tag_name"/>
                <field name="epc"/>
                <field name="user"/>
                <field name="tid"/>
                <field name="password"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

<!--form view of the tag model-->
    <record id="tag_form" model="ir.ui.view">
        <field name="name">rfid.tag.form</field>
        <field name="model">rfid.tag</field>
        <field name="arch" type="xml">
            <form string="tag">
                <sheet>
<!--                    <widget name="web_ribbon" text="not asd" bg_color="bg-danger" attrs="{'invisible':[('epc', '=', 'asd')]}"/>-->
<!--                    <widget name="web_ribbon" text="not hdfg" bg_color="bg-warning" attrs="{'invisible':[('epc', '=', 'hdfg')]}"/>-->
                    <div class="oe_title">
                        <h1>
                            <field name="tag_name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="epc"/>
                            <field name="user"/>
                        </group>
                        <group>
                            <field name="tid"/>
                            <field name="password"/>
                        </group>
                    </group>
                        <field name="notes"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

<!--    action of the patients menu-->
    <record id="action_rfid" model="ir.actions.act_window">
        <field name="name">tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rfid.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_smiling_face">
            <!-- Add Text Here -->
          Create First tag
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>
