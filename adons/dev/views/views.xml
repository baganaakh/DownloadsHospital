<odoo>
	<data>
		<!-- explicit list view definition -->
		<!--
		-->
		<record
			 model="ir.ui.view"
				id="dev_modulename.list" >
			<field name="name">Development module-name List</field>
			<field name="model">dev.modelname</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="value"/>
					<field name="value2"/>
				</tree>
			</field>
		</record>
		<!-- actions opening views on models -->
		<!--
		-->
		<record
			 model="ir.actions.act_window"
				id="dev_modulename.action_window" >
			<field name="name">Development module-name Window</field>
			<field name="res_model">dev.modelname</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!-- server action to the one above -->
		<!--
		-->
		<record 
			  odel="ir.actions.server"
				id="dev_modulename.action_server" >
			<field name="name">Development module-name Server</field>
			<field name="model_id" ref="model_dev_modelname"/>
			<field name="state">code</field>
			<field name="code">
				action = {
					"type"			: "ir.actions.act_window"
					, "view_mode"	: "tree,form"
					, "res_model"	: model._name
				}
			</field>
		</record>
		
		<!-- Top menu item -->
		<!--
		-->
		<menuitem
			  name="Development module-name"
				id="dev_modulename.menu_root" />
		
		<!-- menu categories -->
		<!--
		-->
		<menuitem
			  name="Menu 1"
				id="dev_modulename.menu_1"
			parent="dev_modulename.menu_root" />
		<menuitem
			  name="Menu 2"
				id="dev_modulename.menu_2"
			parent="dev_modulename.menu_root" />
		
		<!-- actions -->
		<!--
		-->
		<menuitem
			  name="List"
				id="dev_modulename.menu_1_list"
			parent="dev_modulename.menu_1"
			action="dev_modulename.action_window" />
		<menuitem
			  name="Server to list"
				id="dev_modulename"
			parent="dev_modulename.menu_2"
			action="dev_modulename.action_server" />
		
	</data>
</odoo>